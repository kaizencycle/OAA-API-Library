# Civic Ledger Configuration
LEDGER_BASE_URL=http://localhost:4000
LEDGER_ADMIN_TOKEN=dev-token

# Optional: Show which ledger URL in dev UI
NEXT_PUBLIC_LEDGER_HINT=http://localhost:4000

# Development Mode
DEV_MODE=1
NEXT_PUBLIC_DEV_MODE=1

# GitHub Integration (for Sentinel Status)
GITHUB_OWNER=kaizencycle
GITHUB_REPO=OAA-API-Library
SENTINEL_WORKFLOW=sentinel-patch.yml
GITHUB_PAT=

# Redis Configuration (for Sentinel Vitals)
REDIS_URL=redis://localhost:6379

# Sentinel Thresholds
SENTINEL_FAIL_RATE_WARN=0.05     # 5% in last window → amber
SENTINEL_FAIL_RATE_CRIT=0.15     # 15% in last window → red
SENTINEL_DEPTH_WARN=50           # queued > 50 → amber
SENTINEL_DEPTH_CRIT=200          # queued > 200 → red
SENTINEL_WINDOW_MIN=15           # lookback window minutes

# Sentinel Suite - Queue Admin
DEV_ADMIN_TOKEN=change-me         # admin token for /dev/queue write ops

# Sentinel Suite - Command Ledger Webhook
LEDGER_WEBHOOK_URL=               # webhook URL for state change notifications
LEDGER_WEBHOOK_HMAC=change-me     # HMAC secret for webhook signing