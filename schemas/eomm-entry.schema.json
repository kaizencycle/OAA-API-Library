{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EOMM Entry",
  "type": "object",
  "required": ["title", "timestamp", "agent", "cycle", "content"],
  "properties": {
    "title": { "type": "string", "minLength": 1 },
    "timestamp": { "type": "string", "minLength": 10 },
    "agent": { "type": "string", "minLength": 1 },
    "cycle": { "type": "string", "minLength": 2 },
    "content": { "type": "string", "minLength": 1 },
    "tags": { "type": "array", "items": { "type": "string" } },
    "author": { "type": "string" },
    "keywords": { "type": "array", "items": { "type": "string" } },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["url", "repo", "dataset", "file"] },
          "name": { "type": "string" },
          "url": { "type": "string" },
          "hash": { "type": "string" },
          "note": { "type": "string" }
        },
        "required": ["type", "name", "url"]
      }
    },
    "links": {
      "type": "object",
      "properties": {
        "ledgerProof": { "type": "string" },
        "beaconUrl": { "type": "string" }
      }
    }
  },
  "additionalProperties": true
}
